<div class="drawer lg:drawer-open" data-controller="drawer">
  <input
    id="drawer"
    type="checkbox"
    class="drawer-toggle"
    data-drawer-target="drawerInput"
  />
  <div class="drawer-content">
    <%= render "navbar" %>
    <%= yield %>
  </div>
  <div class="drawer-side z-20">
    <label
      for="drawer"
      aria-label="close sidebar"
      class="drawer-overlay"
      data-drawer-target="drawerLabel"
    ></label>
    <div class='flex flex-col gap-3 p-1 min-h-full bg-base-200 max-w-xs lg:p-3'>
      <%= content_for?(:sidebar) ? yield(:sidebar) : render("sidebar/manage") %>
    </div>
  </div>
</div>
