<div class="container p-5">
  <div class="flex flex-col items-center">
    <h1 class="font-bold text-4xl">Login</h1>
    <%= form_with(url: session_path, method: :post) do |form| %>
      <%= form.label :username, class: "label" %>
      <%= form.text_field :username, class: "input input-bordered w-full" %>
      <%= form.label :password, class: "label" %>
      <%= form.password_field :password, class: "input input-bordered w-full" %>

      <div class="pt-6">
        <%= form.submit "Login", class: "btn btn-primary w-full" %>
      </div>
    <% end %>
  </div>
